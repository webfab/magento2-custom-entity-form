<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="1column">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">contact</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Produits personnalisés</item>
                    <item name="label" xsi:type="string" translate="true">Produits personnalisés</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Produits personnalisés</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Webfab\CustomProduct\Block\Form" name="contactForm" template="form.phtml" cacheable="false">
                <block class="Magento\Directory\Block\Data" name="form.directorydata"/>

                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </referenceContainer>

        <referenceContainer name="content.top">
            <block name="order-back-link" template="Webfab_CustomProduct::back-link.phtml" before="-"/>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Webfab_CustomProduct\Block\Adminhtml\View" name="document.view"
                   template="Webfab_CustomProduct::view.phtml" cacheable="false"/>
        </referenceContainer>


    </body>
</page>
